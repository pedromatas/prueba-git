<Application x:Class="Templates.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Templates"
             StartupUri="MainWindow.xaml">
    <Application.Resources >
        <Style TargetType="Button" x:Key="Boton1">
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style TargetType="Button" x:Key="Boton2">
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="FontSize" Value="64" />
        </Style>
        <Style TargetType="TextBox" x:Key="Text1">
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="FontSize" Value="32" />
        </Style>
        <Style TargetType="TextBox" x:Key="Text2">
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="FontSize" Value="64" />
        </Style>
        <Style TargetType="Label" x:Key="Label1">
            <Setter Property="Foreground" Value="Green" />
            <Setter Property="FontSize" Value="32" />
        </Style>
        <Style TargetType="Label" x:Key="Label2">
            <Setter Property="Foreground" Value="Green" />
            <Setter Property="FontSize" Value="64" />
        </Style>
    </Application.Resources>
</Application>
